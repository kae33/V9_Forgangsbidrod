"forgangsbidrod.mmod" = 
!
{{
;;; Fastayrding gagna
;;; Forgangsbidrod f er taknud sem bendir a breytu 
;;; sem inniheldur lista af listum [[k1, g1], [k2, g2], ..., [kN, gN]] 
;;; theirra lykla og gilda sem eru i forgangsbidrodinni. Thar sem 
;;; k1 verdur ad vera a undan k2 o.s.frv.
buaTil =
	fun()
	{
		var l;
        &f;
	};

erTom =
    fun(f)
    {
        *f==[] && (return true);
        return false;
    };
baetaI =
    fun(f,g,k)
    {
        ;;; insert kemur her
    }

}}
